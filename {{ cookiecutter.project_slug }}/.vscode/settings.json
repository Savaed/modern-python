{
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "files.exclude": {
        ".venv/": true,
        ".tox": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.coverage": true,
        "**/coverage*": true,
        "**/.mypy_cache": true,
        "**/.ruff_cache": true,
        {% if cookiecutter.use_vscode -%}
        "**/.hypothesis": true,
        {% endif -%}
    },
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.analysis.typeCheckingMode": "off",
    "todo-tree.tree.scanMode": "workspace only"
}
